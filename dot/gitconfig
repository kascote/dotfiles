[user]
  name = Nelson Fernandez
  email = nelson@netflux.com.ar
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = cyan
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  co = checkout
	unadd = reset HEAD
  st = status
  ds = diff --stat -r
  lg = log --graph --pretty=oneline --abbrev-commit
  lc = log ORIG_HEAD.. --stat --no-merges
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
[core]
  editor = vim
[apply]
  whitespace = nowarn
