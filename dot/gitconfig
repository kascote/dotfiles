[user]
	name = Nelson Fernandez
  email = nelson@netflux.com.ar
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = cyan
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  co = checkout
  ci = commit
	unadd = reset HEAD
  st = status -sb
  ds = diff --stat -r
  df = diff -b --color-words
  gl = log --graph --pretty=format:'%Cred%h%Creset %C(cyan)%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lc = log ORIG_HEAD.. --stat --no-merges
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
  ptb = push origin HEAD
  conflict = log --merge --left-right -p
  tags = tag -l
  branches = branch -a
  remotes = remote -v
	cm = !git add -A && git commit -m
  up = pull --rebase --prune
  bclean = "!f() { git branch --merged ${1-master} | grep -v \"${1-master}$\" | xargs -r git branch -d; }; f"
  cob = checkout -b
[core]
  editor = vim
	excludesfile = /Users/nelson/.gitignore_global
[apply]
  whitespace = nowarn
[push]
	default = current
[giggle]
	main-window-maximized = false
	main-window-geometry = 1252x992+619+0
	history-view-vpane-position = 595
	file-view-vpane-position = 428
	main-window-view = HistoryView
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
